pipeline {
    agent {
         node {
             label 'AGENT-1'
           }
           environment { 
        COURSE = 'jenkins'
    }
        }

    stages {
        stage('Build') {
            steps {
                scripts{
                    sh """
                  echo 'Building..in $COURSE' 
                  """ 
                }
            }
        }
        stage('Test') {
            steps {
                scripts{
                   echo 'Testing..'  
                }
            }
        }
        stage('Deploy') {
            steps {
                scripts{
                    echo 'Deploying.....'
                }
            }
        }
    }


    post { 
        always { 
            echo 'I will always say Hello again!'
            deleteDir()
        }
        success { 
            echo ' Hello success'
        }
        failure { 
            echo 'FAILURE'
        }
    }
}